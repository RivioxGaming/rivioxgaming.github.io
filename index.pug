	body
		.main
			h1 riviox
			#info
				txt#pronouns he/him
				txt#bio human
				txt#bio :crab: rust dev
				txt#bio from :pl:
			.btns 
				a(href="https://www.reddit.com/u/rivioxx/")#btn reddit
				a(href="https://discordapp.com/users/1200520669570539620") discord
				a(href="https://github.com/riviox") github
	script(src='script.js')
	script.
		$(document).ready(function() {
			$(".main").each(function() {
				var original = $(this).html();
				var converted = joypixels.toImage(original);
				$(this).html(converted);
			});
		});
