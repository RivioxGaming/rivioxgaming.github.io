html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='description', content='my website or smth')
		meta(name='keywords', content='riviox, rust, pug, website, code, github, flash')
		meta(name='author', content='riviox')
		meta(name='viewport', content='width=device-width,initial-scale=1')
		title riviox
		script(src="https://cdn.jsdelivr.net/npm/emoji-toolkit@8.0.0/lib/js/joypixels.min.js")
		script(src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous")
		link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/emoji-toolkit@8.0.0/extras/css/joypixels.min.css")
